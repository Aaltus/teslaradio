<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!--parent="@style/Theme.AppCompat">-->
    <style name="AppBaseTheme"
           parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!-- For post 10 sdk compatibility -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->


    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/global_app_color</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/global_app_color</item>
    </style>

    <!--Change this color if you want to change the action bar color-->
    <drawable name="global_app_color">#A5B7EC</drawable>

<!--For splashscreen-->
    <style name="Theme.NoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
    </style>

    <!--Camera Preview-->
    <style name="CameraPreviewButtonStyle" parent="android:Theme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="listViewActivatedStyle"/>

</resources>
