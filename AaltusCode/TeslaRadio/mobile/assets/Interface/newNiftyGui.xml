<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="com.galimatias.teslaradio.world.Scenarios.ScenarioManager">
        
        <layer id="background" childLayout="center">
          
        </layer>
        <layer id="foreground" childLayout="horizontal">
          <panel width="100%" height="100%" childLayout="horizontal">
                <panel width="10%" childLayout="center">
                    <panel backgroundColor="#0f08"  width="100%" height="10%" childLayout="center">
                        <control name="test1" label="Previous" id="previousButton" align="center" valign="center" 
                        visibleToMouse="true" > 
                          <interact onClick="setPreviousScenario()"/>
                        </control>
                    </panel>
                </panel>
                <panel/>
                <panel width="10%" childLayout="center">
                    <panel backgroundColor="#0f08"  width="100%" height="10%" childLayout="center">
                        <control name="test2" label="Next" id="nextButton" align="center" valign="center" 
                        visibleToMouse="true" > 
                          <interact onClick="setNextScenario()"/>
                        </control>
                    </panel>
                </panel>
           </panel>
        </layer>
        
    </screen>
    <screen id="hud">
        
      </screen>
</nifty>
