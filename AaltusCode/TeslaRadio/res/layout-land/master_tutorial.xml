<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            style="@style/AppBaseTheme" android:fillViewport="false">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/tutorial_title"
                android:id="@+id/textView"
                android:textSize="40dp"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/tutorial_step1"
                android:id="@+id/textView2"
                android:padding="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_description1"
                android:id="@+id/textView3"
                android:padding="5dp"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/tutorial_step2"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="5dp"/>
		
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center_horizontal">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
			  
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageView" android:contentDescription="@string/scenario_arrows"
                        style="@style/InformativeMenuImageViewStyle" android:src="@drawable/arrow"/>
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageView2" android:contentDescription="@string/touch_arrow"
                        style="@style/InformativeMenuImageViewStyle" android:src="@drawable/touch"/>
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageView3" android:contentDescription="@string/rotation_arrow"
                        style="@style/InformativeMenuImageViewStyle" android:src="@drawable/rotation"/>
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageView4" android:contentDescription="@string/move_arrow"
                        style="@style/InformativeMenuImageViewStyle" android:src="@drawable/move"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/tutorial_interaction1"
                        android:id="@+id/textView5"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/tutorial_interaction2"
                        android:id="@+id/textView6"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/tutorial_interaction3"
                        android:id="@+id/textView7"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/tutorial_interaction4"
                        android:id="@+id/textView8"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
        </LinearLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/tutorial_step3"
                android:id="@+id/textView9"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="5dp"/>
		
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center_horizontal">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
			  
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageView5" style="@style/InformativeMenuImageViewStyle"
                        android:src="@drawable/browser"/>

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageView6" style="@style/InformativeMenuImageViewStyle"
                        android:src="@drawable/ic_info_button"/>

                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageView7" style="@style/InformativeMenuImageViewStyle"
                        android:contentDescription="tesla"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/tutorial_help1"
                        android:id="@+id/textView10"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/tutorial_help2"
                        android:id="@+id/textView11"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/tutorial_help3"
                        android:id="@+id/textView12"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"></LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"></LinearLayout>
                <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/master_tutorial_cancel_button"
                        android:id="@+id/master_tutorial_cancel_button"
                        android:textColor="@color/white"
                        android:background="@drawable/button_bg"/>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"></LinearLayout>
                <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/master_tutorial_ok_button"
                        android:id="@+id/master_tutorial_ok_button"
                        android:textColor="@color/white"
                        android:background="@drawable/button_bg"/>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"></LinearLayout>
            </LinearLayout>

    </LinearLayout>

</ScrollView>
