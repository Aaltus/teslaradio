<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- API 11 theme customizations can go here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/state_list_drawable</item>
        <!--<item name="android:actionButtonStyle">@drawable/state_list_drawable</item>-->
    </style>

    <style name="listViewActivatedStyle">
        <!--<item name="android:background">?android:attr/activatedBackgroundIndicator</item>-->
        <item name="android:background">@drawable/state_list_drawable</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>

    </style>
</resources>
