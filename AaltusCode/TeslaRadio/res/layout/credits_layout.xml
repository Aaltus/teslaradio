<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/credits_scroller"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:fadeScrollbars="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/credits_layout"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textSize="50sp"
                  android:layout_marginBottom="10dp"
                  android:text="@string/Credits"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTitlesStyle"
                  android:text="@string/Responsable"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Emilien"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/David"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTitlesStyle"
                  android:text="@string/Programmeurs"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Hugo"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Jonathan"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Alexandre"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/JC"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Thibault"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Christian"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTitlesStyle"
                  android:text="@string/Recherchiste"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Simon"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTitlesStyle"
                  android:text="@string/Artiste"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Jeremy"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTitlesStyle"
                  android:text="@string/Correctrice"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Melissa"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTitlesStyle"
                  android:text="@string/Photographe"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Laurens"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTitlesStyle"
                  android:text="@string/Professeurs"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Ahmed"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Ruben"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Sebastien"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:text="@string/Vincent"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTextStyle"
                  android:layout_marginBottom="20dp"
                  android:text="@string/Philippe"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@style/CreditsTitlesStyle"
                  android:text="@string/Outils"/>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_weight="1">

                <ImageView style="@style/ImageSize"
                           android:adjustViewBounds="true"
                           android:layout_gravity="center"
                           android:layout_marginBottom="5dp"
                           android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"
                           android:layout_marginTop="5dp"
                           android:scaleType="fitCenter"
                           android:scaleX="0.75"
                           android:scaleY="0.75"
                           android:src="@drawable/android_robot"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/CreditsTextStyle"
                          android:text="@string/Vincent"/>

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_weight="1">

                <ImageView style="@style/ImageSize"
                           android:adjustViewBounds="true"
                           android:layout_gravity="center"
                           android:layout_marginBottom="5dp"
                           android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"
                           android:layout_marginTop="5dp"
                           android:src="@drawable/vuforia"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/CreditsTextStyle"
                          android:text="@string/Vincent"/>

            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_weight="1">

                <ImageView style="@style/ImageSize"
                           android:adjustViewBounds="true"
                           android:layout_gravity="center"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/jmonkey"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/CreditsTextStyle"
                          android:text="@string/Vincent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>