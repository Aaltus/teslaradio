<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:myapp="http://schemas.android.com/apk/res/com.aaltus.teslaradio"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/InformativeMenuScrollView"

        >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/test_layout"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/soundemissionp1"
                style="@style/InformativeMenuTextStyle"
                />

        <FrameLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false">

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="horizontal">

                <View android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"/>

                    <ImageView
                            android:id="@+id/sound_emission_image_preview"
                            android:layout_gravity="center"
                            android:layout_weight="0.3"
                            android:src="@drawable/pression_preview"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_width="0dp"
                            android:clickable="false"/>

                <View android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/play_button" />

        </FrameLayout>


        <!--android:background="@drawable/button_bg"-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/soundemissionp2"
                style="@style/InformativeMenuTextStyle"
                />

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="horizontal">

        <View android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>

            <ImageView
                    android:id="@+id/sound_emission_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_weight="3"
                    android:src="@drawable/source_et_front_donde"
                    />

        <View android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"/>
    </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/soundemissionp3"
                style="@style/InformativeMenuTextStyle"
                />

    </LinearLayout>
</ScrollView>
