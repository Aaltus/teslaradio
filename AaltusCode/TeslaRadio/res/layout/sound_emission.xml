<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:myapp="http://schemas.android.com/apk/res/com.galimatias.teslaradio"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"

        >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/test_layout"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/soundemissionp1"
                style="@style/InformativeMenuTextStyle"
                />

        <!--<com.utils.CustomVideoView
                android:layout_gravity="center_horizontal"
                android:layout_height="400dp"
                android:layout_width="fill_parent"
                android:id="@+id/videoView"
                myapp:uri="android.resource://com.galimatias.teslaradio/raw/pression"
                />-->

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:clickable="false">

            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <ImageView
                    android:id="@+id/sound_emission_image_preview"
                    android:layout_width="650dp"
                    android:layout_height="185dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pression_preview"
                    android:clickable="false"/>

            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/play_button" />

        </FrameLayout>

        <!--android:background="@drawable/button_bg"-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/soundemissionp2"
                style="@style/InformativeMenuTextStyle"
                />
        <ImageView
                android:id="@+id/sound_emission_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/source_et_front_donde"

                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/soundemissionp3"
                style="@style/InformativeMenuTextStyle"
                />

    </LinearLayout>
</ScrollView>
